<div class="ui main text container">
  <div class="ui notice success hidden message">
    <div class="content">
      <p id="notice"><%= notice %></p>
    </div>
  </div>

  <h1>Positions</h1>

  <table class="ui celled striped table">
    <thead>
      <tr>
        <th>Latitude</th>
        <th>Longitude</th>
        <th>Device</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @positions.each do |position| %>
        <tr>
          <td><i class="icon map"></i> <%= position.latitude %></td>
          <td><%= position.longitude %></td>
          <td><%= position.device.name %></td>
          <td><i class="zoom icon"></i> <%= link_to 'Show', position %></td>
          <td><i class="configure icon"></i> <%= link_to 'Edit', edit_position_path(position) %></td>
          <td><i class="red remove icon"></i> <%= link_to 'Destroy', position, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <i class="add icon"></i> <%= link_to 'New Position', new_position_path %>
</div>
